<Window x:Class="Present.FullscreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Present - Fullscreen"
        Icon="Assets/present.ico"
        Background="Black"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    <Grid Background="Black">
        <!-- WebView2 fills the window -->
        <wv2:WebView2 x:Name="SlideWebView"/>

        <!-- Slide counter overlay (bottom-right) -->
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Background="#80000000"
                CornerRadius="6"
                Padding="12,6"
                x:Name="CounterBorder">
            <TextBlock x:Name="SlideCounterText"
                       Text="1 / 1"
                       Foreground="White"
                       FontSize="16"
                       FontFamily="Segoe UI"/>
        </Border>
    </Grid>
</Window>
