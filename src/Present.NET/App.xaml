<Application x:Class="Present.NET.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="DefaultFontFamily">Segoe UI Variable, Segoe UI</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <SolidColorBrush x:Key="AppWindowBackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MenuPopupBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MenuPopupBorderBrush" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="MenuItemHoverBackgroundBrush" Color="#E5F3FB"/>
        <SolidColorBrush x:Key="MenuItemHoverBorderBrush" Color="#99D1F5"/>
        <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="ToolbarForegroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ToolbarSeparatorBrush" Color="#BEBEBE"/>
        <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="SidebarHeaderBackgroundBrush" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="SidebarHeaderBorderBrush" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#222222"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#555555"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#888888"/>
        <SolidColorBrush x:Key="TextInputForegroundBrush" Color="#333333"/>
        <SolidColorBrush x:Key="ItemHoverBackgroundBrush" Color="#E5F3FB"/>
        <SolidColorBrush x:Key="ItemSelectedBackgroundBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="ItemSelectedHoverBackgroundBrush" Color="#0067BE"/>
        <SolidColorBrush x:Key="SplitterBrush" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="#C8C8C8"/>
        <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#EDEDED"/>
        <SolidColorBrush x:Key="ButtonHoverBorderBrush" Color="#9A9A9A"/>
        <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="ButtonPressedBorderBrush" Color="#7E7E7E"/>
        <SolidColorBrush x:Key="PreviewPaneBackgroundBrush" Color="#222222"/>
        <SolidColorBrush x:Key="PreviewPlaceholderTitleBrush" Color="#5E5E5E"/>
        <SolidColorBrush x:Key="PreviewPlaceholderBodyBrush" Color="#777777"/>
        <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="#E7E7E7"/>
        <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#8F8F8F"/>
        <SolidColorBrush x:Key="ScrollBarArrowBrush" Color="#4F4F4F"/>
        <SolidColorBrush x:Key="TooltipBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TooltipForegroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TooltipBorderBrush" Color="#777777"/>

        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="{DynamicResource TooltipBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TooltipForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource TooltipBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Application.Resources>
</Application>
